<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/linearBasicInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lineNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Lock Number"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textNumberValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="S31_ef8a97"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearMacId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearBasicInfo">

        <TextView
            android:id="@+id/lineMacId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="MAC/ID"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textMacIdValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="50:F9:B1:97:8A:EF/5357835"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBattery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearMacId">

        <TextView
            android:id="@+id/lineBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Battery"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textBatteryValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_20"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:text="65%" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearBattery">

        <TextView
            android:id="@+id/lineValidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Validity Period"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/valueValidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="Permanent"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearValidity">

        <TextView
            android:id="@+id/lineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/valueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_20"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="MyLock" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearName">

        <TextView
            android:id="@+id/lineGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Lock Group"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/valueGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_20"
            android:gravity="end"
            android:paddingEnd="15dp"
            android:text="UnGrouped" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAdminPasscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/linearGroup">

        <TextView
            android:id="@+id/lineAdminPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingStart="15dp"
            android:text="Admin Passcode"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/valueAdminPasscode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_baseline_chevron_right_20"
            android:gravity="end"
            android:paddingEnd="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>