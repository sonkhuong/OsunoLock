<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/low_gray_overlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearThemes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineInformation"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/lock_info"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineRemote"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/remote_unlock_setting"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineAutoLock"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_view"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/auto_lock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineLockSound"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_view"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/lock_sound_title"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAnotherControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineLockClock"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/lock_clock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineImportAnotherLock"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_view"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/import_another_lock"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/line_policy"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineGoogleHome"
                    style="@style/label_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_view"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingHorizontal="@dimen/padding_horizontal"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/another_policy"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_view"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lineAttendance"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingHorizontal="@dimen/padding_horizontal"
                        android:paddingVertical="@dimen/padding_vertical_2"
                        android:text="@string/notification_label"
                        android:textColor="@color/black" />

                    <Switch
                        android:id="@+id/switchAttendance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:checked="true"
                        android:longClickable="false"
                        android:paddingEnd="@dimen/padding_horizontal"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small_view"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lineNotification"
                        style="@style/label_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingHorizontal="@dimen/padding_horizontal"
                        android:paddingVertical="@dimen/padding_vertical_2"
                        android:text="@string/warning_label"
                        android:textColor="@color/black" />

                    <Switch
                        android:id="@+id/switchNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:checked="true"
                        android:longClickable="false"
                        android:paddingEnd="@dimen/padding_horizontal"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <TextView
                    android:id="@+id/buttonDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/padding_horizontal_1"
                    android:layout_marginVertical="@dimen/padding_vertical_2"
                    android:background="@drawable/bg_button_shape_red"
                    android:fontFamily="@font/compact"
                    android:gravity="center"
                    android:paddingVertical="@dimen/padding_vertical_2"
                    android:text="@string/button_delete_settings"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>