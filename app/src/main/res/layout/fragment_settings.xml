<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearThemes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineBasics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Basics"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineWireless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Wireless Keypad"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineSensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Door Sensor"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineRemote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Remote Unlock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineAutoLock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Auto Lock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/linePassage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Passage Mode"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineLockSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Lock Sound"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineTamperAlert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Tamper Alert"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineResetButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Reset Button"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAnotherControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineLockClock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Lock Clock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineDiagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Diagnosis"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineUploadData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Upload Data"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineImportAnotherLock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Import From Another Lock"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineFirmwareUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Firmware Update"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearAISupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lineAmazonAlexa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Amazon Alexa"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/lineGoogleHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@color/white"
                    android:drawableEnd="@drawable/ic_baseline_chevron_right_24"
                    android:paddingVertical="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="5dp"
                    android:text="Google Home"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lineAttendance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingVertical="10dp"
                        android:paddingStart="15dp"
                        android:text="Attendance"
                        android:textColor="@color/black" />

                    <Switch
                        android:id="@+id/switchAttendance"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:checked="true"
                        android:longClickable="false"
                        android:paddingEnd="5dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lineNotification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:paddingVertical="10dp"
                        android:paddingStart="15dp"
                        android:text="Unlock Notification"
                        android:textColor="@color/black" />

                    <Switch
                        android:id="@+id/switchNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:background="@color/white"
                        android:checked="true"
                        android:longClickable="false"
                        android:paddingEnd="5dp"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />
                </LinearLayout>

                <TextView
                    android:id="@+id/buttonDelete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/bg_button_shape_red"
                    android:gravity="center"
                    android:paddingVertical="10dp"
                    android:text="Delete Settings"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>