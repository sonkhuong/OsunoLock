<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_vertical_2"
    android:layout_marginBottom="@dimen/margin_view">

    <TextView
        android:id="@+id/itemLockName"
        style="@style/label_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_shape"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawableEnd="@drawable/ic_baseline_add_24"
        android:drawablePadding="@dimen/padding_vertical_2"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_vertical_2"
        android:text="@string/lock_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>