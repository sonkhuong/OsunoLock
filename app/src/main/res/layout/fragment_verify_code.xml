<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Verify Code"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/linearVerifyCode" />

    <LinearLayout
        android:id="@+id/linearVerifyCode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/verifyCode1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/verifyCode2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/verifyCode3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/verifyCode4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/verifyCode5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />

        <TextView
            android:id="@+id/verifyCode6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="number"
            android:singleLine="true" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>