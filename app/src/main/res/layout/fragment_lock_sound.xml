<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/linearLockSound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lineLockSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="15dp"
            android:text="Auto Lock"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switchLockSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:checked="true"
            android:longClickable="false"
            android:paddingEnd="15dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <TextView
        android:id="@+id/textToolsTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingStart="15dp"
        android:text="By Turning ON, you will hear the sound from the lock"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/linearLockSound" />

    <LinearLayout
        android:id="@+id/linearSelectLockVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textToolsTip">

        <TextView
            android:id="@+id/lineTitleSelectLockVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:paddingStart="15dp"
            android:text="Please select lock volume"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Low"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMediumLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium Low"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioMediumHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium High"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="High"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button_shape_white_shadow_gray"
        android:gravity="center"
        android:padding="10dp"
        android:text="Save"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/linearSelectLockVolume" />
</androidx.constraintlayout.widget.ConstraintLayout>