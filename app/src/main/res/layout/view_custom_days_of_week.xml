<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/tD"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_marginVertical="@dimen/margin_view"
        android:layout_marginStart="@dimen/padding_horizontal"
        android:layout_marginEnd="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/monday"
        android:textOn="@string/monday" />

    <ToggleButton
        android:id="@+id/tL"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/tuesday"
        android:textOn="@string/tuesday" />

    <ToggleButton
        android:id="@+id/tM"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/wednesday"
        android:textOn="@string/wednesday" />

    <ToggleButton
        android:id="@+id/tMi"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/thursday"
        android:textOn="@string/thursday" />

    <ToggleButton
        android:id="@+id/tJ"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/friday"
        android:textOn="@string/friday" />

    <ToggleButton
        android:id="@+id/tV"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/saturday"
        android:textOn="@string/saturday" />

    <ToggleButton
        android:id="@+id/tS"
        style="@style/toggleButton"
        android:layout_width="@dimen/size_days_of_week"
        android:layout_height="@dimen/size_days_of_week"
        android:layout_margin="@dimen/margin_view"
        android:background="@drawable/toggle_bg"
        android:textOff="@string/sunday"
        android:textOn="@string/sunday" />
</LinearLayout>